 <!DOCTYPE hibernate-configuration PUBLIC  
              "-//Hibernate/Hibernate Configuration DTD 3.0//EN"  
              "http://hibernate.sourcef.net/hibernate-configuration-.dtd">

<hibernate-configuration>

	<session-factory>

		<property name="hbm2ddl.auto">validate</property>
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/StudentInfo</property>
		<property name="connection.username">root</property>
		<property name="connection.password">0000</property>
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<mapping class="com.scp.MyMavenProjects.studentInfo.StudentBean" />

	</session-factory>

</hibernate-configuration> 